<h2>Listing caves</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for cave <- @caves do %>
    <tr>
      <td><%= cave.name %></td>

      <td class="text-right">
        <%= link "Show", to: cave_path(@conn, :show, cave), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: cave_path(@conn, :edit, cave), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: cave_path(@conn, :delete, cave), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New cave", to: cave_path(@conn, :new) %>
